{
  "include": [
    "./package/**/*.ts",
  ],
  "exclude": [
    "./node_modules",
    "./tests",
    "./package/**/*.test.ts",
  ],
  "compilerOptions": {
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "target": "ES6",
    "outDir": "./dist/esm/",
    "allowJs": false,
    "removeComments": false,
    "sourceMap": true,
    "lib": [
      "ESNext",
      "DOM",
    ],
    "moduleResolution": "node",
    "strict": true,
  },
}